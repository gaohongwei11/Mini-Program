@import "./news.wxss"
.top{
  width: 100%;
  height: 300px;
  position: relative;
  display: flex;
}
.top>image{
  width: 100%;
  height: 100%;
}
.title{
  position: absolute;
  left: 0;
  bottom: 0;
  color: #fff;
  font-weight: bold;
  margin: 30px 20px;
  z-index: 1;
}
.source{
  position: absolute;
  right: 10px;
  bottom: 10px;
  color:rgba(255,255,255,.6);
  font-size: 12px;
  z-index: 1;
}
.img-mask{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 25%,rgba(0,0,0,0.6) 100%);
}
.content-image{
  width: 100%;
}
.wxParse-script{
  display: none;
}