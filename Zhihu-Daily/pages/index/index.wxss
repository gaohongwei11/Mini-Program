/* pages/topics/topics.wxss */
.topics-main {
  background: yellow;
  height: 100%;
}
.classname{
  background-color: yellow;
}
.avatar{
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
/* swiper--start */
swiper{
  height: 200px;
  box-shadow: 0 1px 3px rgba(0,0,0,.1);
}
.image{
  background-repeat: no-repeat;
  background-size: cover; 
  background-position: center center;
}
.shade{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .1);
}
.title{
  position: absolute;
  bottom:20px;
  left: 0;
  color: #fff;
  padding: 0 5%;

}
.image{
  width: 100%;
  height: 100%;
}
/* swiper--end */

/* news--start */
.todayNews{
  font-size: 14px;
  display: block;
  padding: 15px 10px 0 10px;
}
.new{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding:8px;
  border-radius: 4px;
  margin: 10px 10px 0 10px;
  box-shadow: 0 1px 3px rgba(0,0,0,.1);
}
.thumbnail{
  width: 80px;
  min-width: 80px;
  height: 70px;
}
/* news--end */
.content{
  background-color: #eee;
}