.top{
  position: relative;
  display: flex;
}
.top>image{
  width: 100%;
  height: 180px;
}
.description{
  position: absolute;
  left: 0;
  bottom: 10px;
  color: #fff;
  padding: 0 10px;
}
.content{
  background-color: #eee;
}
.editors{
  display: flex;
  align-items: center;
  padding: 20px 10px;
}
.editors>image{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-left: 10px;
}
.stories{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 10px 10px 10px;
  background-color: #fff;
  padding: 10px;
  min-height: 80px;
  border-radius: 4px;
  box-shadow: 0 1px 3px rgba(0,0,0,.1);

}
.stories>text{
  /* color: red; */
}
.stories>image{
  width: 80px;
  min-width: 80px;
  height: 80px;
}
