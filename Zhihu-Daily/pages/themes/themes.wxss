/**index.wxss**/
.themes{
  width: 100%;
  margin-bottom: 30px;
  border-radius: 4px;
  background-color: #fff;
  overflow: hidden;
  box-shadow: 0 1px 3px rgba(0,0,0,.1);
}
.theme{
  display: flex;
  position: relative;
  width: 100%;
  /* height: 320px; */
}
.thumbnail{
  width: 100%;
  /* height: 100%; */
}
.name{
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  background-color: rgba(0, 0,0, .4);
  padding: 10px;
}
.description{
  display: flex;
  align-items: center;
  padding:10px;
  height: 60px;
}